<?xml version='1.0' encoding='UTF-8'?>
<AiDenoiseConfig version="0.0.11">
    <!-- 普通段ISO模式下的降噪参数 -->
    <DenoiserBranch>
        <!-- ISO起始值 -->
        <ISOstart>0</ISOstart>
        <!-- ISO终止值： 当输入图片的曝光值在该设定的ISO段范围内下调用该Branch下的参数 -->
        <ISOend>1000</ISOend>
        <!-- 曝光时间起始值 -->
        <ExpTimeStart>0</ExpTimeStart>
        <!-- 曝光时间终止值： 当输入图片的曝光时间值在该设定的曝光段范围内下调用该Branch下的参数 -->
        <ExpTimeEnd>10000</ExpTimeEnd>
        <!-- 以下配置仅配置EV0生效 -->
        <!-- 用来控制噪声的调试 -->
        <!-- 方差估计将会自动通过以下公式计算： var_input = var * scale * evscale + evbias -->
        <!-- 例如evscale=0.9，此时方差估计变小，则会放出更多的噪声，若evscale=1.1，则方差估计变大，会导致降噪加强 -->
        <EvScale>1</EvScale>
        <EvBias>0</EvBias>
        <!-- 通过控制residule的维度来控制噪声放出的强弱，考虑原降噪公式： clean_image = observed_image - ResScale * noise -->
        <!-- AI网络估计的是noise这个值，所以当ResScale不等于1.0时，噪声都会呈现均匀增加 -->
        <ResScale>0.8</ResScale>
        <!-- 通过外部传入mask调整特定区域的ResScale，如果没有设置MaskArray或相应的MaskResScale，则默认等于ResScale -->
        <!-- 通过数组的方式支持多个mask，顺序和传入的mask对应，最大数量为5 -->
        <!-- ResScale 和 MaskResScale 值域范围是 (0,1.5) -->
        <MaskArray>
            <!-- Mask1: SkyMask -->
            <MaskResScale>0.9</MaskResScale>
            <!-- Mask2: Empty -->
            <MaskResScale>1.0</MaskResScale>
            <!-- Mask3: Empty -->
            <MaskResScale>1.0</MaskResScale>
            <!-- Mask4: Empty -->
            <MaskResScale>1.0</MaskResScale>
            <!-- Mask5: Empty -->
            <MaskResScale>1.0</MaskResScale>
        </MaskArray>
    </DenoiserBranch>
    <DenoiserBranch>
        <ISOstart>1000</ISOstart>
        <ISOend>5000</ISOend>
        <ExpTimeStart>0</ExpTimeStart>
        <ExpTimeEnd>10000</ExpTimeEnd>
        <EvScale>1</EvScale>
        <EvBias>0</EvBias>
        <ResScale>0.85</ResScale>
        <MaskArray>
            <!-- Mask1: SkyMask -->
            <MaskResScale>0.9</MaskResScale>
        </MaskArray>
    </DenoiserBranch>
    <DenoiserBranch>
        <ISOstart>5000</ISOstart>
        <ISOend>7000</ISOend>
        <ExpTimeStart>0</ExpTimeStart>
        <ExpTimeEnd>10000</ExpTimeEnd>
        <EvScale>1</EvScale>
        <EvBias>0</EvBias>
        <ResScale>0.92</ResScale>
        <MaskArray>
            <!-- Mask1: SkyMask -->
            <MaskResScale>0.95</MaskResScale>
        </MaskArray>
    </DenoiserBranch>
    <DenoiserBranch>
        <ISOstart>7000</ISOstart>
        <ISOend>10000</ISOend>
        <ExpTimeStart>0</ExpTimeStart>
        <ExpTimeEnd>10000</ExpTimeEnd>
        <EvScale>1</EvScale>
        <EvBias>0</EvBias>
        <ResScale>0.95</ResScale>
        <MaskArray>
            <!-- Mask1: SkyMask -->
            <MaskResScale>0.95</MaskResScale>
        </MaskArray>
    </DenoiserBranch>
    <!-- HISO模式下的降噪参数 -->
    <DenoiserBranch>
        <ISOstart>10000</ISOstart>
        <ISOend>65000</ISOend>
        <ExpTimeStart>0</ExpTimeStart>
        <ExpTimeEnd>10000</ExpTimeEnd>
        <EvScale>1</EvScale>
        <EvBias>0</EvBias>
        <ResScale>0.96</ResScale>
        <MaskArray>
            <!-- Mask1: SkyMask -->
            <MaskResScale>0.98</MaskResScale>
        </MaskArray>
    </DenoiserBranch>
</AiDenoiseConfig>